<div class="form-group mb-4">
    <label for="title">Title</label>
    <input class="form-control" type="text" name="title" value="<%= article.title %>" required/>
</div>

<div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea class="form-control" type="text" name="description"  required><%= article.description %></textarea>
</div>

<div class="form-group mb-4">
    <label for="markdown">Markdown</label>
    <textarea class="form-control" type="text" name="markdown" required><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-danger">Cancel</a>
<button type="submit" class="btn btn-primary">Create</button>
